            <column name="document_number" type="varchar(255)">
            </column>

            <column name="patient_mrn" type="varchar(255)">
            </column>

            <column name="patient_name" type="varchar(255)">
            </column>

            <column name="unit_name" type="varchar(255)">
            </column>

            <column name="unit_code" type="varchar(255)">
            </column>

            <column name="created_date" type="timestamp">
            </column>

            <column name="consumption_department_name" type="varchar(255)">
            </column>

            <column name="consumption_department_code" type="varchar(255)">
            </column>

            <column name="consumption_hsc_name" type="varchar(255)">
            </column>

            <column name="consumption_hsc_code" type="varchar(255)">
            </column>

            <column name="issued_hsc_name" type="varchar(255)">
            </column>

            <column name="issued_hsc_code" type="varchar(255)">
            </column>

            <column name="approved_date" type="timestamp">
            </column>

            <column name="approver_name" type="varchar(255)">
            </column>

            <column name="approver_code" type="varchar(255)">
            </column>

            <column name="issued_by_name" type="varchar(255)">
            </column>

            <column name="issued_by_code" type="varchar(255)">
            </column>

            <column name="item_name" type="varchar(255)">
            </column>

            <column name="item_code" type="varchar(255)">
            </column>

            <column name="batch_number" type="varchar(255)">
            </column>

            <column name="uom" type="varchar(255)">
            </column>

            <column name="quantity" type="double">
            </column>

            <column name="cost" type="double">
            </column>

            <column name="total_cost" type="double">
            </column>

            <column name="executed" type="boolean" defaultValue="false">
            </column>


        </createTable>
    </changeSet>
</databaseChangeLog>
